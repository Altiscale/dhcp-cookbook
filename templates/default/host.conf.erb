# File managed by Chef

host <%= @hostname %> {
<% if @macaddress -%>  hardware ethernet <%= @macaddress %>; <% end -%>
<% if @servername -%>  server-name "<%= @servername %>"; <% end -%>
<% if @ipaddress -%>  fixed-address <%= @ipaddress %>; <% end -%>
<% if @filename -%>  file-name "<%= @filename %>"; <% end -%>
<% unless @parameters.empty? -%>
  <% @parameters.each do |parameter| -%>
  <%= parameter %>;
  <% end -%>
<% end -%>
<% unless @options.empty? -%>
  <% @options.each do |option| -%>
  option <%= option %>;
  <% end -%>
<% end -%>
}
